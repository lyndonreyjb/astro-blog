---
import { Image } from "astro:assets";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <article class="max-w-4xl mx-auto px-6 py-12">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h1
          class="text-4xl font-thin tracking-tight text-neutral-900 dark:text-white"
        >
          {frontmatter.title}
        </h1>

        <div
          class="flex items-center space-x-4 text-neutral-600 dark:text-neutral-400"
        >
          <time class="text-sm font-light">
            {frontmatter.pubDate.toString().slice(0, 10)}
          </time>
          <span class="text-sm font-light italic">
            {frontmatter.description}
          </span>
        </div>

        <p class="text-sm text-neutral-500 dark:text-neutral-300">
          Written by: {frontmatter.author}
        </p>
      </div>
      <div class="rounded-xl overflow-hidden shadow-lg">
        <Image
          height={50}
          width={50}
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
          class="w-full h-96 object-cover transition-transform duration-300 hover:scale-105"
        />
      </div>
    </div>

    <div class="prose dark:prose-invert max-w-none mt-12">
      <slot />
    </div>

    <div class="mt-8 flex flex-wrap gap-3">
      {
        frontmatter.tags.map((tag) => (
          <a
            href={`/pedalboards/${tag}`}
            class="
            capitalize px-3 py-2 text-sm rounded-md bg-neutral-200
             hover:bg-yellow-400 dark:bg-yellow-400 dark:hover:bg-yellow-500 dark:text-neutral-900 font-semibold
    transition-colors inline-block
          "
          >
            {tag}
          </a>
        ))
      }
    </div>
  </article>
</Layout>
